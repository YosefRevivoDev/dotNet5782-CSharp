<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="PL.MainWindow"
        mc:Ignorable="d" 
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Title="MainWindow" Height="450" Width="800">

    <Window.Background>
        <ImageBrush ImageSource="/PacketFly.jpg"/>
    </Window.Background>

    <Grid Background="Transparent">

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
          
        </Grid.RowDefinitions>

        <StackPanel Height="60" VerticalAlignment="Bottom" Grid.Row="0" Visibility="Visible">
            <Button x:Name="btnListDrone" Content="הצג רחפנים" Margin="3,10,5,5" Click="btnListDrone_Click"/>
        </StackPanel>

        <Grid x:Name="EnterTheApp" Margin="487,10,89,100" Grid.Row="1" Visibility="Visible">
            <StackPanel>
                <TextBlock Text="ברוכים הבאים" TextAlignment="Center" TextWrapping="NoWrap" FontWeight="Bold" FontSize="24" Background="{DynamicResource MaterialDesignBackground}" />
                <TextBlock x:Name="EnterUserName" Grid.Row="0" Text=": שם משתמש" Background="LightGray" Height="29" TextAlignment="Right" FontSize="16" />
                <TextBox x:Name="UserName" MaxLength="20" Background="Azure" Text="" Height="29"/>
                <TextBlock x:Name="EnterPassword" Grid.Row="1" Text=": סיסמא" Background="LightGray" Height="25" TextAlignment="Right" FontSize="16"/>
                <TextBox x:Name="Password" MaxLength="8" Background="Azure" Text="" Height="28"/>
                <Button x:Name="btnEnterApp"
              Style="{StaticResource MaterialDesignRaisedDarkButton}" Background="Transparent"
                Height="40" IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}" Click="btnEnterApp_Click">
                    <TextBlock Text="כניסה" Foreground="#ff6331" Background="{DynamicResource MaterialDesignTextAreaBorder}" FontSize="28"/>
                </Button>
                <Button
              Style="{StaticResource MaterialDesignRaisedDarkButton}" Background="Transparent" Height="40"
                IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}">
                    <TextBlock Text="הרשמה" Foreground="#ff6331" Background="{DynamicResource MaterialDesignTextFieldBoxHoverBackground}" TextAlignment="Center" TextWrapping="NoWrap" FontSize="24" />
                </Button>
            </StackPanel>
        </Grid>

        <Grid x:Name="CompanyManagement" Visibility="Hidden" Grid.Row="1">

            <TabControl TabStripPlacement="Right" Grid.Row="1" Background="Transparent">
                <TabItem Header="Admin">

                    <Grid Background="Transparent">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="126*"/>
                            <ColumnDefinition Width="120*"/>
                            <ColumnDefinition Width="350*"/>
                            <ColumnDefinition Width="147*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock><Run Text="Hello World"/></TextBlock>
                    </Grid>
                </TabItem>
                <TabItem Header="Drones">
                    <Grid Background="Transparent">
                        
                        <TextBox Text="Hello Drones"/>
                    </Grid>
                </TabItem>
                <materialDesign:DrawerHost Content="DrawerHost"/>
            </TabControl>
        </Grid>

    </Grid>

</Window>
